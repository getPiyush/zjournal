{
  "name": "zjoutnal-react-ts",
  "version": "1.0.0",
  "description": "zJournal - A React TS bases journal editor application",
  "keywords": [
    "typescript",
    "react",
    "starter"
  ],
  "main": "src/index.tsx",
  "dependencies": {
    "axios": "latest",
    "crypto-js": "latest",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-font-loader": "latest",
    "html-react-parser": "latest",
    "react-phone-input-2": "latest",
    "react-router-dom": "latest",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "latest",
    "@testing-library/dom": "latest",

    "@types/jest": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "concurrently": "latest",
    "express": "latest",
    "json-server": "0.17.4",
    "random-sentence": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "start": "set PORT=80&&react-scripts start",
    "prodrun": "cd build&&node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "server:dev": "cd server/node&&node server.js -w --development",
    "server": "cd server/node&&node server.js -w --production",
    "dev": "concurrently \"yarn start\" \"yarn server:dev\"",
    "prod": "concurrently \"yarn prodrun\" \"yarn server\""
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
